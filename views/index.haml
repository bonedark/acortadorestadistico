.panel.panel-primary
    .panel-heading
        %h1 Últimas URL's agregadas por todos los usuarios.
    .panel-body
        %table.table
            %tr
                %th
                    URL completa
                %th
                    URL corta
                %th
                    Dirección Email
                %th
                    Estadísticas
            - @list.each do |url|
                %tr
                    %td
                        #{url.url}
                    %td
                        %a{:href=>"/visitar/#{url.urlshort}"} #{url.urlshort}
                    %td
                        - if url.email != nil
                            #{url.email}
                        - else
                            Pública
                    %td.text-center
                        %a{:href=>"/info/#{url.urlshort}", :title => "Estadísticas"}
                            %i.fa.fa-bar-chart
